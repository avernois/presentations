\newenvironment{stepitemize}{
  \begin{itemize}
    \renewcommand{\item}[1][]{%
      \stepcounter{step}%
      \ifthenelse{\equal{##1}{}}{\beamext@olditem<\value{step}->}{\beamext@olditem<\value{step}->[##1]}}%
  }{%
  \end{itemize}
}

